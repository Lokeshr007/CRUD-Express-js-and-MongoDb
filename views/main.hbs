<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>MongoDB CRUD Example</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

  <div class="container mt-5">
    <h1 class="text-center mb-4">üìö MongoDB Books Database</h1>

    <!-- Success Message -->
    
    {{#if message}}
      <div class="alert alert-success text-center">
        {{message}}
      </div>
    {{/if}}

    <!-- Form -->
    <div class="card shadow-sm mb-4">
      <div class="card-body">
        {{#if edit_id}}
          <h4 class="mb-3">‚úèÔ∏è Update Book</h4>
          <form action="/update_book/{{edit_id}}" method="POST">
            <div class="mb-3">
              <label class="form-label">Title</label>
              <input type="text" name="title" class="form-control" value="{{edit_book.title}}" required>
            </div>
            <div class="mb-3">
              <label class="form-label">Author</label>
              <input type="text" name="author" class="form-control" value="{{edit_book.author}}" required>
            </div>
            <button type="submit" class="btn btn-warning">Update</button>
            <a href="/" class="btn btn-secondary">Cancel</a>
          </form>
        {{else}}
          <h4 class="mb-3">‚ûï Add Book</h4>
          <form action="/store_book" method="POST">
            <div class="mb-3">
              <label class="form-label">Title</label>
              <input type="text" name="title" class="form-control" required>
            </div>
            <div class="mb-3">
              <label class="form-label">Author</label>
              <input type="text" name="author" class="form-control" required>
            </div>
            <button type="submit" class="btn btn-primary">Add</button>
          </form>
        {{/if}}
      </div>
    </div>

    <!-- Books List -->
    <div class="card shadow-sm">
      <div class="card-body">
        <h4 class="mb-3">üìñ All Books</h4>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Title</th>
              <th>Author</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            {{#each books}}
              <tr>
                <td>{{this.title}}</td>
                <td>{{this.author}}</td>
                <td>
                  <a href="/?edit_id={{this._id}}" class="btn btn-sm btn-outline-warning">Edit</a>
                  <a href="/delete_book/{{this._id}}" class="btn btn-sm btn-outline-danger"
                     onclick="return confirm('Are you sure you want to delete this book?');">
                    Delete
                  </a>
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
